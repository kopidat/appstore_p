<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
	<style name="PatternView">
        <item name="aspect">square</item>
    </style>

    <style name="PatternView.Holo">#
        <item name="regularColor">@android:color/white</item>
        <item name="errorColor">@android:color/holo_red_light</item>
        <item name="successColor">@android:color/white</item>
        <item name="pathColor">@android:color/white</item>
        <item name="dotDrawableDefault">@drawable/plugin_3rdparty_pattern_dot_default</item>
        <item name="dotDrawableTouched">@drawable/plugin_3rdparty_pattern_dot_touched</item>
        <item name="circleDrawableDefault">@drawable/plugin_3rdparty_pattern_circle_default_alpha</item>
        <item name="circleDrawableError">@drawable/plugin_3rdparty_pattern_circle_error_alpha</item>
        <item name="circleDrawable">@drawable/plugin_3rdparty_pattern_circle_alpha</item>
        <item name="arrowUpDrawable">@drawable/plugin_3rdparty_pattern_arrow_alpha</item>
    </style>

    <style name="PatternView.Holo.Light">
        <item name="regularColor">@android:color/holo_blue_dark</item>
        <item name="successColor">@android:color/holo_blue_dark</item>
        <item name="pathColor">@android:color/holo_blue_dark</item>
    </style>
    
    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:windowDisablePreview">true</item>
        <item name="patternViewStyle">@style/PatternView.Holo</item>
    </style>

    <style name="AppTheme.Light" parent="android:Theme.Holo.Light">
        <item name="android:windowDisablePreview">true</item>
        <item name="patternViewStyle">@style/PatternView.Holo.Light</item>
    </style>
    
    
</resources>